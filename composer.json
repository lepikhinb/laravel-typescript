{
    "name": "based/laravel-typescript",
    "description": "Transform Laravel models into TypeScript interfaces",
    "keywords": [
        "laravel",
        "typescript"
    ],
    "homepage": "https://github.com/lepikhinb/laravel-typescript",
    "license": "MIT",
    "authors": [
        {
            "name": "Boris Lepikhin",
            "email": "boris@lepikhin.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "doctrine/dbal": "^3.1",
        "illuminate/contracts": "^8.37|^9.0|^10.0|^11.0",
        "spatie/laravel-package-tools": "^1.11.0"
    },
    "require-dev": {
        "brianium/paratest": "^6.2|^7.4",
        "nunomaduro/collision": "^5.3|^6.1.0|^8.0",
        "nunomaduro/larastan": "^0.7.11|^2.0.1",
        "orchestra/testbench": "^6.15|^7.0.1|^8.0|^9.0",
        "phpunit/phpunit": "^9.3|^10.5"
    },
    "autoload": {
        "psr-4": {
            "Based\\TypeScript\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Based\\TypeScript\\Tests\\": "tests"
        }
    },
    "scripts": {
        "stan": "vendor/bin/phpstan analyse",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Based\\TypeScript\\TypeScriptServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
